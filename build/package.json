{
  "name": "coffee-card-editor",
  "version": "1.0.0",
  "description": "咖啡名片批量编辑器",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node package.js",
    "docker:build": "docker build -t coffee-card-editor .",
    "docker:run": "docker run -d --name coffee-card-editor -p 3000:3000 -v $(pwd)/img:/app/img -v $(pwd)/log:/app/log coffee-card-editor",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop coffee-card-editor",
    "pm2:restart": "pm2 restart coffee-card-editor",
    "pm2:logs": "pm2 logs coffee-card-editor",
    "deploy:build": "npm run build && echo 'Build completed. Upload build/ directory to your server.'",
    "deploy:docker": "npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "coffee",
    "card",
    "editor",
    "pdf",
    "batch"
  ],
  "author": "Coffee Card Editor",
  "license": "MIT"
}
